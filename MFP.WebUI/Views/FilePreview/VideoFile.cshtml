
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VideoFile</title>
    <link href="//vjs.zencdn.net/7.3.0/video-js.min.css" rel="stylesheet">
    <script src="//vjs.zencdn.net/7.3.0/video.min.js"></script>
    <script>
        videojs.options.flash.swf = '/file/video-js.swf'
    </script>
</head>
<body>
<div>
    <video id='myvideo' width=960 height=540 class="video-js vjs-default-skin" controls >
        <!-- RTMP直播源地址-->
        <source src="~/File/1.mp4">    
    </video>
    <script> 
        var player = videojs('myvideo', { teachOrder: ['flash'] }, function () { console.log('videojs播放器初始化成功') })
        player.play();
    </script>

</div>
</body>
</html>
